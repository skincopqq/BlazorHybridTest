<Window x:Class="Test.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:blazor="http://schemas.microsoft.com/winfx/2006/xaml/presentation/blazor"
        xmlns:local="clr-namespace:Test.FrontShared.Pages;assembly=Test.FrontShared"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <!-- Базовая информация -->
            <TextBlock Text="Добро пожаловать в WPF приложение!" 
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,10" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Здесь вы можете открыть страницу Blazor." 
                       FontSize="14" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- Кнопка для перехода на BlazorPage -->
            <Button Content="Открыть BlazorPage" Width="150" Height="40" 
                    Click="OpenBlazorPage_Click"/>
        </StackPanel>
    </Grid>
</Window>
